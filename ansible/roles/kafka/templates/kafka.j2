[Unit]
Description=Run kafka server
After=rc-local.service

[Service]
ExecStart={{kafka_install_dir}}/kafka_{{scala_version}}-{{kafka_version}}/bin/kafka-server-start.sh {{kafka_config_dir}}/server.properties
ExecStop={{kafka_install_dir}}/kafka_{{scala_version}}-{{kafka_version}}/bin/kafka-server-stop.sh
SuccessExitStatus=143

